<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
<style name="Titles">
    <item name="android:textColor">@color/fondo_titulos</item>
    <item name="android:fontFamily">sans-serif-smallcaps</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:colorBackground">@color/colorPrimary</item>
</style>

    <style name="Vacas">
        <item name="android:textColor">@color/vacas</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="PuntosVacas">
        <item name="android:textColor">@color/puntos_vacas</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PuntosPendientes">
        <item name="android:textColor">@color/puntos_vacas</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="boton_ordago">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/background_dark</item>
    </style>
</resources>
